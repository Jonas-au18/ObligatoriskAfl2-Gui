@{
    ViewData["Title"] = "WaiterView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="css/Kitchen.css">
</head>
<body>

<h1>WaiterView</h1>

<div>
    <div>
        <form asp-action="WaiterView">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" />*
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" />*
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Experience"></label>
                <textarea asp-for="Experience" rows="8"></textarea>*
                <span asp-validation-for="Experience" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Apply Now" id="mySubmit" class="button" /> &nbsp;&nbsp;
                <a asp-action="Index" asp-controller="Home" class="button">Cancel</a>
            </div>
        </form>
    </div>
</div>

<form action="/action_page.php">
    <label for="RoomNr">Room number:</label>
    <input type="number" id="RoomNr" name="Ro" placeholder="0" min="0" ><br><br>
    <label for="Adults">Adults:</label>
    <input type="number" id="adults" name="Ad" placeholder="0" min="0"><br><br>
    <label for="Kids">Kids:</label>
    <input type="number" id="kids" name="Ki" placeholder="0" min="0"><br><br>
    <input type="submit" value="Submit">
</form>

</body>
</html>