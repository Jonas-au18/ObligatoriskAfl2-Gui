@using Hotel_California.Data
@using Microsoft.EntityFrameworkCore
@model IEnumerable<Hotel_California.Models.Guest>


@{
    ViewData["Title"] = "Kitchen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<!-- https://dribbble.com/shots/2407357-Calendar%60 -->
<html>
<head>
    <link rel="stylesheet" href="css/Kitchen.css">
</head>
<body>

    <div class="calendar">
        <!--This is the "Frontside". This is what the user sees when he opens the kalender-->
        <div class="front">

            <div class="month">
                <ul>
                    <li id="date"></li>
                    <li onclick="prevMonth()" class="prev">&#10094;</li>
                    <li onclick="NextMonth()" class="next">&#10095;</li>
                </ul>

            </div>

            <!--Here are the weekdays created-->
            <div>
                <ul class="week-days">
                    <li>MON</li>
                    <li>TUE</li>
                    <li>WED</li>
                    <li>THU</li>
                    <li>FRI</li>
                    <li>SAT</li>
                    <li>SUN</li>
                </ul>

                <!--Here are all dates of the month created-->
                <div class="weeks">
                    <div class="first">
                        <span class="last-month">28</span>
                        <span class="last-month">29</span>
                        <span class="last-month">30</span>
                        <span class="last-month">31</span>
                        <span>01</span>
                        <span>02</span>
                        <span>03</span>
                    </div>

                    <div class="second">
                        <span>04</span>
                        <span>05</span>
                        <span>06</span>
                        <span class="active">07</span>
                        <span>08</span>
                        <span>09</span>
                        <span>10</span>
                    </div>

                    <div class="third">
                        <span>11</span>
                        <span>12</span>
                        <span>13</span>
                        <span>14</span>
                        <span>15</span>
                        <span>16</span>
                        <span>17</span>
                    </div>

                    <div class="fourth">
                        <span>18</span>
                        <span>19</span>
                        <span>20</span>
                        <span>21</span>
                        <span>22</span>
                        <span>23</span>
                        <span>24</span>
                    </div>

                    <div class="fifth">
                        <span>25</span>
                        <span>26</span>
                        <span>27</span>
                        <span>28</span>
                        <span>29</span>
                        <span>30</span>
                        <span>31</span>
                    </div>
                </div>
            </div>
        </div>


        <!--This is the "backside" where the user is sent after clicking on a date-->
        <div class="back">
            <div class="info">
                <div class="date">
                    <p class="info-date">
                        Date: <span id="date"></span>
                    </p>
                    <div class="time">
                        <p class="info-time">
                            Time: <span id="time"></span>
                        </p>
                    </div>
                </div>
                <div class="bookings">
                    <p class="info-bookings">
                        adults: <span id="adults"></span>
                    </p>
                    <p class="info-bookings">
                        kids: <span id="kids"></span>
                    </p>
                    <p class="info-bookings">
                        Booking: <span id="reservations"></span>
                    </p>
                </div>
                <div class="bookings">
                    <p class="info-bookings">
                        checked in: <span id="adults actual"></span>
                    </p>
                    <p class="info-bookings">
                        checked in: <span id="kids actual"></span>
                    </p>
                    <p class="info-bookings">
                        Arrived: <span id="checkedIN"></span>
                    </p>
                </div>
            </div>
            <div class="actions">
                <button class="save">
                    Save <i class="ion-checkmark"></i>
                </button>
                <button class="dismiss">
                    close <i class="ion-android-close"></i>
                </button>
            </div>
        </div>
    </div>

    @section Scripts
    {

        @{
            List<Guest> adults = new List<Guest>();
            List<Guest> kids = new List<Guest>();

            using (var context = new ApplicationDbContext())
            {
                var query = context.Guest
                    .FirstOrDefault();

                kids.Add(query);
            }


        }


        <script src="~/js/Kitchen.js" asp-append-version="true"></script>
        <script>
