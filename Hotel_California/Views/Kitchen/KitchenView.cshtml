            var x = d.getMonth();
            var y = d.getFullYear();

            function prevMonth() {
                if (x <= 0) {
                    x = 11;
                    y--;
                } else {
                    x--;
                }
                document.getElementById("date").innerHTML = monthNames[x] + " \n" + y;
            }

            function NextMonth() {
                if (x >= 11) {
                    x = 0;
                    y++;
                } else {
                    x++;
                }
                document.getElementById("date").innerHTML = monthNames[x] + " \n" + y;
            }

        </script>

    }

</body>
</html>

